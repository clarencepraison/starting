name=['ak','bk','lk']
password=['a','b','c']
print("IF LOGIN ENTER l ")
print("IF SIGN_UP ENTER s ")
start=input("login(l)/sign_up(s):\n")

def choose():
    if start=="s":
        return sign_up()
    elif start in "l":
        return login()
    

def login():  
    n=input("enter name:\n")
    while n not in name:
          print("enter a valid name")
          n=input()
    m=input("enter password:\n")
    while m not in password:
          print("enter a vaild password")
          m=input()
    print("Acess Granted")
          


def sign_up():
    n=input("Enter a  name:\n")
    name.append(n) 
    m=input("Enter a password:\n")
    password.append(m)
    print("NOW SIGN_IN YOUR ACCOUNT")
    sign_in()


choose()
